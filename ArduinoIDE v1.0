const int buttonPin1 = 2;  // Pino do botão 1
const int buttonPin2 = 3;  // Pino do botão 2
const int buttonPin3 = 4;  // Pino do botão 3
const int buttonPin4 = 5;  // Pino do botão 4

void setup() {
  Serial.begin(9600);  // Inicia a comunicação serial a 9600 bps
  
  pinMode(buttonPin1, INPUT_PULLUP);
  pinMode(buttonPin2, INPUT_PULLUP);
  pinMode(buttonPin3, INPUT_PULLUP);
  pinMode(buttonPin4, INPUT_PULLUP);
}

void loop() {
  int buttonState1 = digitalRead(buttonPin1);
  int buttonState2 = digitalRead(buttonPin2);
  int buttonState3 = digitalRead(buttonPin3);
  int buttonState4 = digitalRead(buttonPin4);
  
  // Inverte os estados dos botões para refletir "1" quando pressionado e "0" quando solto
  buttonState1 = !buttonState1;
  buttonState2 = !buttonState2;
  buttonState3 = !buttonState3;
  buttonState4 = !buttonState4;
  
  // Envia os estados dos botões pela serial
  Serial.print(buttonState1);
  Serial.print(",");
  Serial.print(buttonState2);
  Serial.print(",");
  Serial.print(buttonState3);
  Serial.print(",");
  Serial.println(buttonState4);
  
  delay(100);  // Pequeno atraso para evitar muitas leituras
}
