import serial
import tkinter as tk
from PIL import Image, ImageTk


def atualizar_interface(): # Essa função atualizará a interface com base nos sinais recebidos do Arduino
    
    mensagem = ser.readline().decode().strip()
    if mensagem == '1':
        mostrar_imagem("imagem1.jpg")
    elif mensagem == '2':
        mostrar_imagem("imagem2.jpg")
    elif mensagem == '3':
        mostrar_imagem("imagem3.jpg")
    elif mensagem == '4':
        mostrar_imagem("imagem4.jpg")
    else:
        mostrar_imagem("imagemerro.jpg")

    
    root.after(100, atualizar_interface)

# Função para mostrar a imagem na interface
def mostrar_imagem(caminho_imagem): # Função que mostrará a imagem na interface
    
    imagem = Image.open(caminho_imagem)
    imagem = imagem.resize((300, 300), Image.ANTIALIAS) 

    
    imagem_tk = ImageTk.PhotoImage(imagem)

    
    label_imagem.config(image=imagem_tk)
    label_imagem.image = imagem_tk


ser = serial.Serial('COMX', 9600)  # COMX é a porta do serial (te amo carlos)


root = tk.Tk()
root.title("EMOSENSE")


label_imagem = tk.Label(root)
label_imagem.pack()


root.after(100, atualizar_interface)

root.mainloop()
#guile